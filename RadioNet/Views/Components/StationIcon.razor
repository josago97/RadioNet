<img src="@IconUrl" loading="lazy" @onerror="OnError" />

@code {
    private const string DEFAULT_ICON_URL = "./images/no_image.jpg";

    [Parameter] public string StationIconUrl { get; set; }
    private string IconUrl { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        IconUrl = string.IsNullOrEmpty(StationIconUrl)
            ? DEFAULT_ICON_URL
            : StationIconUrl;
    }

    private void OnError()
    {
        IconUrl = DEFAULT_ICON_URL;
    }
}
